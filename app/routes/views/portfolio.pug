block content
    .container.header-panel
      .header-panel-content
        img.header-panel-img.profile-img.rounded-circle(src='assets/img/home/profile-img.jpg', alt='profile-img')
        .name-page
          h4 Portfolio
      .header-title-name
        h5 Richard Roe
    // MOBILE NAVIGATION
    .float-btn.top
      a.main-btn
        .mobile-icon
          i.icon.ion-md-add
      ul
        li
          a.content-link.icon-wrap(href='/', data-toggle='popover', data-content='Главная')
           
        li
          a.content-link.icon-wrap(href='/about', data-toggle='popover', data-content='О бренде')

        li
          a.content-link.icon-wrap(href='/resume', data-toggle='popover', data-content='resume')

        li
