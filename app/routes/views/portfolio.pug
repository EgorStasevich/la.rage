    nav.nav-wide
      a.content-link.icon-wrap(href='/', data-toggle='popover', data-content='Главная')
        
      a.content-link.icon-wrap(href='/about', data-toggle='popover', data-content='about')

      a.content-link.icon-wrap(href='/resume', data-toggle='popover', data-content='resume')

      a.content-link.icon-wrap(href='/portfolio', data-toggle='popover', data-content='portfolio')

      a.content-link.icon-wrap(href='/contact', data-toggle='popover', data-content='contacts')

    .header
